// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Character {
  id          Int     @id @default(autoincrement())
  photoUrl    String?
  name        String
  gender      String?
  eye         String?
  hair        String?
  skin        String?
  love        String?
  weapon      String?
  profession  String?
  position    String?
  predecessor String?
  affiliation String?
  first       String?
  last        String?
  voiced      String?
  nationality String?
  ethnicity   String?
}

model TvSeries {
  id          Int       @id @default(autoincrement())
  title       String
  description String
  start       String
  end         String
  seasons     Season[]
  episodes    Episode[]
}

model Season {
  id       Int       @id @default(autoincrement())
  order    Int
  title    String
  seriesId Int
  series   TvSeries  @relation(fields: [seriesId], references: [id])
  episodes Episode[]
}

model Episode {
  id            Int      @id @default(autoincrement())
  title         String
  description   String
  airDate       String
  seasonEpisode Int
  seriesEpisode Int
  seriesId      Int
  series        TvSeries @relation(fields: [seriesId], references: [id])
  seasonId      Int
  season        Season   @relation(fields: [seasonId], references: [id])
}
